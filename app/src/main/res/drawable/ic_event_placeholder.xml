<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="16dp" />
    <solid android:color="#BBDEFB" /> <!-- Light blue background -->
    <padding android:left="16dp" android:right="16dp" android:top="16dp" android:bottom="16dp" />

    <!-- Add optional placeholder text or icon -->
    <size android:width="100dp" android:height="100dp" />

    <stroke
        android:width="2dp"
        android:color="#1976D2" /> <!-- Dark blue stroke -->

    <!-- Optional transparent gradient effect -->
    <gradient
        android:startColor="#1976D2"
        android:endColor="#BBDEFB"
        android:angle="270" />
</shape>
