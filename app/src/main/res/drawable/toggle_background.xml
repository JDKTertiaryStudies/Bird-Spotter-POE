<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow (Elevation effect) -->
    <item>
        <shape>
            <solid android:color="#e0e0e0" /> <!-- Slight shadow color -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Background with rounded corners and gray border -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Main background color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Slight gray border -->
        </shape>
    </item>

</layer-list>
