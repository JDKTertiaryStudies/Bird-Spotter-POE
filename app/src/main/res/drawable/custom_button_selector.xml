<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When button is pressed (clicked) -->
    <item android:state_pressed="true" android:drawable="@color/blue_pressed" />

    <!-- When button is focused or selected -->
    <item android:state_selected="true" android:drawable="@color/blue_selected" />
    <item android:state_focused="true" android:drawable="@color/blue_selected" />

    <!-- Default unselected state -->
    <item android:drawable="@color/blue_unselected" />
</selector>
