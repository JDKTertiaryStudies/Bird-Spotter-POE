<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:padding="16dp">

    <!-- Toggle Selection to Show Different Sections -->
    <LinearLayout
        android:id="@+id/toggleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingConstraints">

        <!-- Toggle Button for User Details -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/userDetailsToggle"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_user" /> <!-- Your user icon here -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle Button for Form Details -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/formDetailsToggle"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_form" /> <!-- Your form icon here -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle Button for Bird Observations -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/birdObservationsToggle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_bird" /> <!-- Your bird icon here -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Toggle Button for Admin Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/adminToggle"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_admin" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Sections to display User Details, Form Details, or Bird Observations -->
    <ScrollView
        android:id="@+id/sectionContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toggleLayout"
        app:layout_constraintBottom_toTopOf="@id/mapTypeSwitchLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Placeholder for content (User Details, Form Details, Bird Observations) -->
        <LinearLayout
            android:id="@+id/sectionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Content Views will be dynamically shown here -->
        </LinearLayout>
    </ScrollView>

    <!-- Map View with Switches to Toggle Views -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectionContainer"
        android:layout_marginTop="16dp" />

    <!-- Buttons to Switch Map Types -->
    <LinearLayout
        android:id="@+id/mapTypeSwitchLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@id/mapView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/mapNormalView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_map_normal"
            android:contentDescription="Normal View"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/mapSatelliteView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_map_satellite"
            android:contentDescription="Satellite View"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/map3DView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_map_3d"
            android:contentDescription="3D View"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
